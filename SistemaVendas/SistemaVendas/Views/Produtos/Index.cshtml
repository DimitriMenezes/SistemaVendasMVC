@model IEnumerable<SistemaVendas.Models.Produto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Descrição do Produto:")
        </th>
        <th>
            @Html.DisplayName("Preço:")
        </th>
        <th>
            @Html.DisplayName("Quantidade no estoque:")
        </th>
        <th>
            @Html.DisplayName("Data de Fabricação:")
        </th>
        <th>
            @Html.DisplayName("Válido:")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var dataFabricacao = item.DataFabricacao.ToShortDateString();
        var valido = item.Valido ? "Sim" : "Não";
        var preço = "R$ " + item.Preço;


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayName(preço)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayName(dataFabricacao)
            </td>
            <td>
                @Html.DisplayName(valido)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
